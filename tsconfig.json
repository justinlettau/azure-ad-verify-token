{
  "compilerOptions": {
    "allowJs": true,
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es6", "dom"],
    "module": "node16",
    "moduleResolution": "node16",
    "noImplicitAny": true,
    "outDir": "dist",
    "sourceMap": true,
    "target": "ES2019"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["src/**/*.spec.ts"]
}
